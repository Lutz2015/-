.boxlist{
  font-size: 32rpx;
  background: #fff;
}
.listTop{
  height: 112rpx;
  line-height: 112rpx;
  padding: 0 30rpx;  
  border-bottom: 1px solid #e9e9e9;
  position: relative;
}
.listTop image{
  height: 36rpx;
  width: 26rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -18rpx;
}
.listcont{
  padding: 30rpx;
  font-size: 28rpx;
  color: #999999;
  border-bottom: 1px solid #e9e9e9;
  
}
@keyframes openframe{ 
  0%{
		transform: rotate(0deg);
	}
	100%{
		transform: rotate(-90deg);
	}
}
@keyframes closeframe{ 
  0%{
		transform: rotate(-90deg);
	}
	100%{
		transform: rotate(0);
	}
}
.open{
  animation:openframe 0.5s linear forwards;
}
.close{
  animation:closeframe 0.5s linear forwards;  
}
