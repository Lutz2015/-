.realtimeTab{
  height: 70rpx;
  overflow: hidden;
  clear: both;
  text-align: center;
  line-height: 70rpx;
  font-size: 32rpx;
  color: #999;
  background: #fff;
  box-shadow: 0rpx 7rpx 6rpx rgba(255,91,91,0.1);
  position: fixed;
  width: 100%;
}
.realtimeTab .checkTab {
  width: 50%;
  height: 70rpx;
  position: relative;
  float: left;
}

.active {
  color: #ff5b5b;
}

.activeImg {
  width: 92rpx;
  height: 16rpx;
  position: absolute;
  bottom: -6rpx;
  left: 50%;
  margin-left: -46rpx;
}
.corerank,.invete{background: #fff}
.list{
  height: 144rpx;
  border-bottom: 1px solid #e9e9e9;
  margin-left: 30rpx;
  padding-right:30rpx;
  position: relative;
  padding: 30rpx 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  font-size: 28rpx; 
}
.rank{
 width: 80rpx;
 overflow: hidden;
}
.userHead{
   width: 90rpx;
   height: 90rpx;
   margin-right: 30rpx;
   border-radius: 50%;
}
.userName{
  width: 300rpx;
  overflow: hidden;
}
.core{
  position: absolute;
  right: 30rpx;
  height: 100%;
  line-height: 144rpx;
  top: 0;
}
.kefu{
  width: 90%;
  position: fixed;
  background: -webkit-linear-gradient(top, rgb(255, 83, 83), rgb(255, 123, 123));  
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  bottom: 100rpx;
  left: 5%;
  border: 0;
  border-radius: 40rpx;
}
.complain{
  width: 20%;
  position: fixed;
  height: 78rpx;
  line-height: 78rpx;
  color: #2D95FF;
  text-align: center;
  font-size: 28rpx;
  bottom: 20rpx;
  left: 40%;
}
.listActive{
  background: rgba(255, 91, 91,0.1); 
  margin-left: 0;
  padding-left: 30rpx;
  border: 0;
  width: 100%;
}
.topListBox{
  width: 100%;
  z-index: 99;
  position: fixed;
  top: 76rpx;
  left: 0;
  height: 144rpx;
  background: #fff;
}

.ruleBox{
  height: 360rpx;
  width: 90%;
  position: fixed;
  top: 50%;
  margin-top: -180rpx;
  left: 5%;
  border-radius: 5px;
  z-index: 9999;
  background: rgba(255, 255, 255, 0.9);
  font-size: 24rpx;
  padding: 30rpx;
  box-sizing: border-box;
  text-align: left;
}
.ruleBox view{
  line-height: 50rpx;
}
.ruleBox .titleRule{
  position: absolute;
  height: 72rpx;
  width: 186rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 32rpx;
  color: #699522;
  font-weight: bold;
  border-radius: 3px;
  top: -46rpx;
  left: 50%;
  margin-left: -93rpx;
  background: rgba(255, 255, 255, 1);
}
.ruleBox .close{
  height: 84rpx;
  width: 84rpx;
  position: absolute;
    bottom: -100rpx;
  left: 50%;
  margin-left: -42rpx
}