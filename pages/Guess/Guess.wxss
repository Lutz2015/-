.realtimeTab{
  height: 70rpx;
  overflow: hidden;
  clear: both;
  text-align: center;
  line-height: 70rpx;
  font-size: 32rpx;
  color: #999;
  background: #fff;
  box-shadow: 0rpx 6rpx 6rpx #ddd;
  position: fixed;
  width: 100%;
}
.realtimeTab .checkTab {
  width: 50%;
