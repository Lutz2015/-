.pageTop {
  height: 308rpx;
  position: relative;
  margin-bottom: 80rpx;
}

.pageTopBg {
  height: 280rpx;
  width: 100% !important;
  margin-top: -2rpx;
}
.userInfoBox {
  height: 278rpx;
  width: 692rpx;
  position: absolute;
  left: 50%;
  margin-left: -346rpx;
  top: 60rpx;
  background: #fff;
  border-radius: 5px;
  box-shadow: 0rpx 6rpx 6rpx #ddd;
}
.userInfoBox .userImg{
  height: 138rpx;
  width: 138rpx;
  position: absolute;
  top: -60rpx;
  left: 50%;
  margin-left: -69rpx;
  border-radius: 50%;
}
.userName{
  font-size: 32rpx;
  text-align: center;
  margin-top: 100rpx;
  
}
.userInfo{
  height: 100rpx;
  width: 100%;
  position: absolute;
  bottom: 20rpx;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.boxL,.boxC,.boxR{
  width: 33%;
  display: flex;
  justify-content: center;
  flex-direction:column;
  font-size: 28rpx;
  text-align: center;
  position: relative;
}
.userInfo .red{
  color: #FF5B5B;
  font-size: 36rpx;
}
.boxL::after{
  content: '';
  height:60rpx;
  width: 2rpx;
  position: absolute;
  right: 0;
  top: 50%;
  background: #e9e9e9;
  margin-top: -30rpx;
}
.boxR::after{
  content: '';
  height:60rpx;
  width: 2rpx;
  position: absolute;
  left: 0;
  top: 50%;
  background: #e9e9e9;
  margin-top: -30rpx;
}
.meList{
  height: 90rpx;
  display: flex;
  padding: 0 30rpx;
  align-items: center;
  font-size: 32rpx;
  margin-top: 30rpx;
  background: #fff;
  box-shadow: 0rpx 6rpx 6rpx #ddd;
  position: relative;
  border-radius: 0;
  border: 0;
}
.meList button{
  opacity: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}
.meList .icon{
  width: 42rpx;
  height: 42rpx;
  margin-right: 30rpx;
}
.right{
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  right: 30rpx;
  top: 50%;
  margin-top: -16rpx;
}
.kefu{
  margin-bottom: 30rpx;
}