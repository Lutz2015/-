  <view class='countryTeam'>
    <image class='leftC' src='../../images/other/jpan.png'></image>
    <image class='rightC' src='../../images/other/jpan.png'></image>
    <view class='cInfoBox'>
      <text>俄罗斯</text>
      <text class='red'>vs</text>
      <text>中国</text>
    </view>
    <view class='backUpBox'>
      <view class='timeLeft'>
        <image src='../../images/icon/time.png'></image>
        <text>06/14 23:00</text>
      </view>
      <view class='btnRight' style='background:#DDDDDD;'>竞猜结束</view>
    </view>
  </view>
</template>

